# This file is meant to be called using ". judge_setup_env"
# It sets up various variables.
JUDGES_46=`cat $HOME/autojudges_46.txt`
JUDGES_47=`cat $HOME/autojudges_47.txt`
ALL_JUDGE_LIST="${JUDGES_46} ${JUDGES_47}"
myhost=`cat /etc/hostname`
hostnum="${myhost//[[:alpha:]\-]/}"
CCS_BASE_47=5
CCS_MAX=8
if test -z ${hostnum}
then
	hostnum=1
elif test ${hostnum} -gt ${CCS_MAX}
then
	hostnum=1
fi
if test ${hostnum} -ge ${CCS_BASE_47}
then
	contest=47
	AJ_BASE=11
	JUDGE_LIST=${JUDGES_47}
else
	contest=46
	AJ_BASE=1
	JUDGE_LIST=${JUDGES_46}
fi
JUDGEUSER=icpc
if ! getent passwd ${JUDGEUSER} >/dev/null 2>&1
then
	JUDGEUSER=ubuntu
fi
#URLBASE=
URLBASE=.icpc-vcss.org

#echo contest $contest AJ_BASE $AJ_BASE

# Computes contest for supplied judge as well as judge's ordinal for the contest.
SetContestInfo()
{
	j_num=$1
	jord=$((j_num-AJ_BASE+1))
}
